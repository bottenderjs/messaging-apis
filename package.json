  },
  "license": "MIT",
  "devDependencies": {
    "axios": "^0.16.2",
    "axios-mock-adapter": "^1.9.0",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.5.2",
    "chalk": "^1.1.3",
    "eslint": "^4.0.0",
    "eslint-config-prettier": "^2.2.0",
    "eslint-config-yoctol-base": "^0.12.5",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-prettier": "^2.1.2",
    "flow-bin": "^0.48.0",
    "husky": "^0.13.4",
    "jest": "^20.0.4",
    "lerna": "^2.0.0-rc.5",
    "lint-staged": "^4.0.0",
    "micromatch": "^3.0.3",
    "mkdir": "^0.0.2",
    "prettier": "^1.4.4",
    "rimraf": "^2.6.1"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --npm-client=yarn",
    "build": "node ./scripts/build.js",
    "clean": "rimraf ./packages/*/build",
    "lint": "eslint packages",
    "lint:fix": "yarn run lint -- --fix",
    "lint:staged": "lint-staged",
    "precommit": "lint-staged",
    "publish": "yarn run clean --silent && yarn run build --silent && lerna publish --silent",
    "testonly": "jest",
    "testonly:watch": "jest --watch",
    "test": "yarn run typecheck --silent && yarn run lint --silent && yarn run testonly --silent",
    "typecheck": "flow check"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {}
}
